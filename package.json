{
  "name": "lfs-canvas-api",
  "version": "1.0.0",
  "description": "Generates CSV of dept course schedule along with enrolment data",
  "repository": {
    "type": "git",
    "url": "https://github.com/UBC-LFS/course-scheduler"
  },
  "author": "Justin Lee <justin.lee@ubc.ca>",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": "~6.9.1",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/course-section-generator.js",
    "dev": "nodemon src/course-section-generator.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w src test"
  },
  "keywords": [
    "express",
    "babel",
    "boilerplate",
    "scaffold",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "jest",
    "eslint"
  ],
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.2",
    "csv-parse": "^4.4.6",
    "es6-promise": "^4.2.4",
    "express": "^4.16.2",
    "isomorphic-fetch": "^2.2.1",
    "json2csv": "^5.0.7",
    "morgan": "^1.9.0",
    "pug": "^2.0.0-beta11",
    "ramda": "^0.24.1",
    "request": "^2.83.0",
    "rimraf": "^2.6.1",
    "x2js": "^3.1.1"
  },
  "devDependencies": {
    "babel-jest": "^20.0.0",
    "babel-register": "^6.24.1",
    "dotenv": "^4.0.0",
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^20.0.0",
    "eslint-watch": "^3.1.3",
    "jest": "^20.0.0",
    "nodemon": "^1.14.11",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/UBC-LFS/course-scheduler/issues"
  },
  "homepage": "https://github.com/UBC-LFS/course-scheduler/blob/master/README.md",
  "directories": {
    "test": "test"
  }
}
