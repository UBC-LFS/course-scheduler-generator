{
  "name": "lfs-canvas-api",
  "version": "1.0.0",
  "description": "Generates CSV of dept course schedule along with enrolment data",
  "repository": {
    "type": "git",
    "url": "https://github.com/UBC-LFS/course-scheduler"
  },
  "author": "Justin Lee <justin.lee@ubc.ca>",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": "~6.9.1",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/course-section-generator.js",
    "dev": "nodemon src/course-section-generator.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w src test"
  },
  "keywords": [
    "express",
    "babel",
    "boilerplate",
    "scaffold",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "jest",
    "eslint"
  ],
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.19.0",
    "braces": "^3.0.2",
    "cheerio": "^1.0.0-rc.9",
    "csv-parse": "^4.15.4",
    "es6-promise": "^4.2.8",
    "express": "^4.17.1",
    "isomorphic-fetch": "^3.0.0",
    "json2csv": "^5.0.6",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "ramda": "^0.27.1",
    "request": "^2.83.0",
    "rimraf": "^3.0.2",
    "x2js": "^3.4.1"
  },
  "devDependencies": {
    "babel-jest": "^26.6.3",
    "babel-register": "^6.26.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/UBC-LFS/course-scheduler/issues"
  },
  "homepage": "https://github.com/UBC-LFS/course-scheduler/blob/master/README.md",
  "directories": {
    "test": "test"
  }
}
